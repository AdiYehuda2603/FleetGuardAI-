# Streamlit Cloud Secrets Configuration
# Copy this file to 'secrets.toml' and fill in your actual values
# DO NOT commit secrets.toml to Git!

# ========================================
# OpenAI API Configuration
# ========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY = "sk-proj-your-actual-key-here"
OPENAI_MODEL_NAME = "gpt-4o-mini"

# ========================================
# Database Configuration
# ========================================
DATABASE_PATH = "data/database/fleet.db"

# ========================================
# Application Settings
# ========================================
ENVIRONMENT = "production"
LOG_LEVEL = "INFO"

# ========================================
# Email Invoice Fetcher Configuration
# ========================================
# Note: Email features are optional. Set EMAIL_FETCH_ENABLED = false to disable.
EMAIL_FETCH_ENABLED = false
EMAIL_IMAP_SERVER = "imap.gmail.com"
EMAIL_IMAP_PORT = 993
EMAIL_ADDRESS = "your-email@gmail.com"
EMAIL_PASSWORD = "your-gmail-app-password"
EMAIL_FOLDER = "FleetGuardAI"
EMAIL_MARK_AS_READ = true
EMAIL_MAX_FETCH = 50
EMAIL_DATE_FILTER_DAYS = 30

# ========================================
# Instructions for Streamlit Cloud
# ========================================
# 1. Go to your app settings in Streamlit Cloud
# 2. Navigate to the "Secrets" section
# 3. Copy the content of this file (with your actual values)
# 4. Paste it into the secrets editor
# 5. Save changes
